<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/loging_back"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/loging_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="@dimen/x40"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x60"
        android:gravity="center"
        android:text="欢迎你加入宠物寄养"
        android:textColor="#91ffffff"
        android:textSize="@dimen/x60" />

    <EditText
        android:id="@+id/loging_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x100"
        android:hint="请输入手机号码"
        android:textColorHint="#91ffffff"
        android:textSize="@dimen/x40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/loging_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/x50"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#91ffffff"
            android:textColorHint="#91ffffff"
            android:textSize="@dimen/x40" />

        <TextView
            android:id="@+id/loging_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/x50"
            android:text="忘记密码"
            android:textColor="#fff0"
            android:textSize="@dimen/x40" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_loging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:src="@drawable/login_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x150"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x40"
            android:layout_weight="1"
            android:background="#fff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="使用第三方账号登录"
            android:textColor="#91ffffff"
            android:textSize="@dimen/x30" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x2"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x40"
            android:layout_weight="1"
            android:background="#fff" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/linearLayout3"
            android:layout_marginEnd="122dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/loging_weixin"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/x170"
                android:src="@drawable/login_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textColor="#91ffffff"
                android:textSize="@dimen/x40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/linearLayout3"
            android:layout_marginEnd="38dp">

            <ImageView
                android:id="@+id/loging_qq"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/x170"
                android:src="@drawable/login_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="手机QQ"
                android:textColor="#91ffffff"
                android:textSize="@dimen/x40" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
