<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c9c9c9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:clickable="true"
            android:id="@+id/near_first"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/near_first_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:text="附近优先"
                android:textColor="#7A7A7A" />

            <ImageView
                android:id="@+id/near_first_view"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@mipmap/down_arrow"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/petcalz"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/petclaz_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#7A7A7A"
                android:clickable="false"
                android:text="宠物类型"/>

            <ImageView
                android:id="@+id/petclaz_view"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@mipmap/down_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filtrate"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"

            android:layout_height="match_parent">
            <Button
                android:id="@+id/filtrate_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textColor="#7A7A7A"
                android:clickable="false"
                android:text="筛选"/>

            <ImageView
                android:id="@+id/filtrate_view"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@mipmap/down_arrow"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c9c9c9"/>

</LinearLayout>